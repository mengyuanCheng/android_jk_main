<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:orientation="vertical" >

    <TextView
        android:id="@+id/wcccamera_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="二维码扫描"
        android:textSize="20dp"
        tools:ignore="SpUsage"/>
    <TextView
        android:id="@+id/scan_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="5dp"
        android:hint="二维码信息" />

    <ListView
        android:id="@+id/scan_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#F2F5F7"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/scan_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_scan"
        android:contentDescription="保存信息"/>
    <Button
        android:id="@+id/scan_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop_scan" />
    <Button
        android:id="@+id/scan_data_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_commot" />

</LinearLayout>
